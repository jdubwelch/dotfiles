{
  "title": "Launch MacOS apps",
  "rules": [
    {
      "description": "Launch apps by right option+letters.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Google Chrome.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/iTerm.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open ~"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/System/Applications/Messages.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Visual Studio Code.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "s", "modifiers": { "mandatory": ["right_option"] } },
          "to": [ { "shell_command": "open '/Applications/Slack.app'" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "d", "modifiers": { "mandatory": ["right_option"] } },
          "to": [ { "shell_command": "open '/Applications/DataGrip.app'" } ]
        },
        {
          "type": "basic",
         "from": { "key_code": "r", "modifiers": { "mandatory": ["right_option"] } },
          "to": [ { "shell_command": "open '/Applications/Postman.app'" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "n", "modifiers": { "mandatory": ["right_option"] } },
          "to": [ { "shell_command": "open '/Applications/Obsidian.app'" } ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Spotify.app'"
            }
          ]
        }
      ]
    }
  ]
}
